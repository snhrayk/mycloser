datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client{
  provider = "prisma-client-js"
}

model Song {
  id         Int          @id @default(autoincrement())
  title      String       @unique
  background String
  phrases    SongPhrase[]
  createdAt  DateTime     @default(now())
}

model SongPhrase {
  id        Int          @id @default(autoincrement())
  songId    Int
  order     Int
  section   String
  lyricEn   String
  lyricJa   String
  song      Song         @relation(fields: [songId], references: [id], onDelete: Cascade)
  memos     PhraseMemo[]

  @@unique([songId, order])
}

model PhraseMemo {
  id         Int        @id @default(autoincrement())
  phraseId   Int
  memoText   String     @db.Text
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  phrase     SongPhrase @relation(fields: [phraseId], references: [id], onDelete: Cascade)

  @@unique([phraseId])
}